{
  "name": "spatial-hashmap",
  "version": "1.0.6",
  "description": "Broad phase collision detection using a spatial hashmap",
  "keywords": [
    "collision",
    "collision detection",
    "game",
    "physics",
    "spatial hashmap"
  ],
  "repository": "derduher/spatial-hashmap-js",
  "license": "MIT",
  "author": "patrick.weygand@gmail.com",
  "main": "./dist/cjs/spatial-manager.js",
  "module": "./dist/esm/spatial-manager.js",
  "browser": "./dist/cjs/spatial-manager.js",
  "scripts": {
    "pretty": "eslint --fix 'src/**/*' && pretty-quick --staged",
    "build": "tsc && tsc -p tsconfig.esm.json",
    "test": "tsc && jest",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jest": true,
      "mocha": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "@typescript-eslint/indent": "off",
      "no-multi-spaces": "off",
      "padded-blocks": "off",
      "react/jsx-closing-tag-location": "off",
      "react/jsx-first-prop-new-line": "off",
      "react/jsx-indent": "off",
      "react/jsx-max-props-per-line": "off",
      "react/jsx-wrap-multilines": "off",
      "switch-colon-spacing": "off",
      "max-len": "off",
      "no-case-declarations": 0,
      "no-console": 0,
      "no-unused-vars": 0,
      "react/prop-types": 0,
      "indent": "off",
      "@typescript-eslint/no-parameter-properties": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "args": "none"
        }
      ],
      "@typescript-eslint/member-delimiter-style": "off",
      "@typescript-eslint/explicit-member-accessibility": [
        "warn",
        {
          "accessibility": "no-public"
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "*-test.ts",
          "*.spec.ts"
        ],
        "rules": {
          "@typescript-eslint/explicit-function-return-type": "off"
        }
      }
    ]
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!node_modules/",
      "!src/**/*.spec.*",
      "!src/types.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^28.1.3",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "pretty-quick": "^4.2.2",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
  }
}
